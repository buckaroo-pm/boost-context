[project]
  ignore = .git

[parser]
  default_build_file_syntax = SKYLARK

[cxx]
  should_remap_host_platform = true

[cxx#macosx-x86_64]
  should_remap_host_platform = true
  cxxppflags = -DBOOST_USE_UCONTEXT=1

[cxx#linux-x86_64]
  should_remap_host_platform = true
  cxxppflags = -DBOOST_USE_UCONTEXT=1
